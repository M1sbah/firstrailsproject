        <h2><%= pluralize(@teacher.errors.count, "error") %> prohibited this teacher from being saved:</h2>

        <ul>
            <% @teacher.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

   <div class="mb-3 col-6">
        <div class="row mt-2">
            <%= f.label :name %>
            <%= f.text_field :name ,class:"form-control mt-2"%>
        </div>
       <div class="row mt-2">
             <%= f.label :email ,class:"mt-2"%>
            <%= f.email_field :email ,class:"form-control mt-2"%>
       </div>
       <div class="row mt-2">
            <%= f.label :age ,class:"mt-2"%>
            <%= f.number_field :age ,class:"form-control mt-2 number-field" %>
        </div>
        <div class="actions mt-2">
            <%= f.submit class:"btn btn-primary" %>
            <%= link_to "Back", teachers_path ,class:"btn btn-outline-primary" , data: {confirm: 'Are you sure?' }%>
        </div>
   </div>
<%end%>