<div class="card mb-5">
    <div class="row justify-content-md-center">
        <div class="col-4 center-text">
            <h1>Teachers</h1>
        </div>
    </div>
</div>
<div><%= flash[:notice]%></div>

<table class="table table-striped table-hover table-bordered">
    <thead class="table-primary">
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Age</th>
            <th colspan=2>Actions</th>
        </tr>
    </thead> 
    <tbody>
        <%@teachers.each do |teacher|%>
            <tr>
                <td><%= teacher.name %></td>
                <td><%= teacher.email %></td>
                <td><%= teacher.age %></td>
                <td>
                    <%= link_to "Show" ,teacher ,class:"btn btn-info"%>
                    <%= link_to "Edit" ,edit_teacher_path(teacher) ,class:"btn btn-primary"%>
                </td>
                <td><%= button_to "Delete" ,teacher_path(teacher),class:"btn btn-danger", method: :delete, data: {confirm: 'Confirm'} %></td>
            </tr>
        <%end%>
    </tbody>
</table>
<%= link_to "New Teacher" ,new_teacher_path ,class:"btn btn-outline-primary"%>