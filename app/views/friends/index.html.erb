<h1>Friends</h1>
<br>

<table class="table table-striped table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Phone No.</th>
      <th>Email</th>
      <th>Instagram</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user %>
    <tr>
      <td><%= friend.first_name %></td>
      <td><%= friend.last_name %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.email %></td>
      <td><%= friend.instagram %></td>
      <td><%= link_to "Show", friend %></td>
    </tr>
    <%end%>
    <% end %>
  </tbody>
</table>
<%= link_to "New friend", new_friend_path ,class:"btn btn-secondary"%>
